//-
  doctype html
  html(lang="en-GB")
    head
      block head
        meta(http-equiv='Content-Type' content='text/html; charset=UTF-8')
        title=title
        link(rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon")
        
